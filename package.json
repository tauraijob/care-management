{
  "name": "lucerna-health",
  "version": "1.0.0",
  "description": "Premium healthcare booking platform for diaspora clients managing care for loved ones in Zimbabwe",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "nuxt typecheck",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "backup": "node scripts/backup.js",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "performance:analyze": "nuxt build --analyze",
    "deploy:staging": "nuxt build && nuxt generate",
    "deploy:production": "NODE_ENV=production nuxt build && nuxt generate"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.19",
    "@heroicons/vue": "^2.1.1",
    "@nuxtjs/color-mode": "^3.3.2",
    "@nuxtjs/robots": "^3.0.0",
    "@nuxtjs/sitemap": "^5.0.0",
    "@nuxtjs/tailwindcss": "^6.11.4",
    "@pdf-lib/fontkit": "^1.1.1",
    "@pinia/nuxt": "^0.5.1",
    "@prisma/client": "^6.16.3",
    "@stripe/stripe-js": "^3.0.10",
    "@vueuse/nuxt": "^10.9.0",
    "bcrypt": "^5.1.1",
    "chart.js": "^4.4.1",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^3.6.0",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "nuxt": "^3.10.3",
    "nuxt-icon": "^0.6.8",
    "pdf-lib": "^1.17.1",
    "primeicons": "^6.0.1",
    "primevue": "^3.49.1",
    "puppeteer": "^24.16.1",
    "stripe": "^14.20.0",
    "vue": "^3.4.21",
    "vue-chartjs": "^5.3.0",
    "vue-router": "^4.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.0.8",
    "@nuxt/eslint-config": "^0.2.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "cypress": "^13.6.6",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-vue": "^9.21.1",
    "prettier": "^3.2.5",
    "prisma": "^6.16.3",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vue-tsc": "^1.8.27"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "healthcare",
    "home-care",
    "zimbabwe",
    "diaspora",
    "medical-care",
    "elderly-care",
    "booking-platform",
    "nuxt",
    "vue",
    "typescript"
  ],
  "author": {
    "name": "Lucerna & Stern Health",
    "email": "info@lucernahealth.com",
    "url": "https://lucernahealth.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucerna-health/platform.git"
  },
  "bugs": {
    "url": "https://github.com/lucerna-health/platform/issues"
  },
  "homepage": "https://lucernahealth.com",
  "funding": {
    "type": "individual",
    "url": "https://lucernahealth.com/donate"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
